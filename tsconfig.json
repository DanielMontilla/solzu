{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client", "node"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "vitest.config.ts", "src/**/*.test.ts", "src/helper.ts"]
}
